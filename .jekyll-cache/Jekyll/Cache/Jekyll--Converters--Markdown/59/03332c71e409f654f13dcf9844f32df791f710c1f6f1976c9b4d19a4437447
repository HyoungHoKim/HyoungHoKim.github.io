<h3 id="í’€ì´">í’€ì´</h3>
<div class="language-plaintext highlighter-rouge"><div class="highlight"><pre class="highlight"><code>#include &lt;stdio.h&gt;
#include &lt;stdbool.h&gt;
#include &lt;string.h&gt;
#include &lt;stdlib.h&gt;

size_t answer_size = 0;

int compare(const void *a, const void *b)
{
    char temp1[9] = { 0, };
    char temp2[9] = { 0, };

    int num1 = *(int*)a;
    int num2 = *(int*)b;

    sprintf(temp1, "%d%d", num1, num2);
    sprintf(temp2, "%d%d", num2, num1);
    answer_size += strlen(temp1);
    // ì •ìˆ˜í˜•ì„ ë³€í™˜í•˜ëŠ” ê³¼ì •ì—ì„œ ëŠ˜ì–´ë‚˜ëŠ” í¬ê¸° ë•Œë¬¸ì— ë”°ë¡œ í¬ê¸°ë¥¼ ê³„ì‚°í•œë‹¤.  

    if(strcmp(temp1, temp2) &gt; 0)
        return -1;
    else if(strcmp(temp1, temp2) == 0)
        return 0;
    else return 1;

}

char* solution(int numbers[], size_t numbers_len) {

    char* answer;
    char temp[4] = "";
    size_t i;

    qsort(numbers, numbers_len, sizeof(int), compare);

    if(*numbers == 0){
        answer = (char*)malloc(sizeof(char) * 2);
        answer[0] = '0';
        answer[1] = '\0';
        return answer;
    }

    answer = (char*)malloc(sizeof(char) * (answer_size + 1));
    *answer = 0;

    for(i = 0; i &lt; numbers_len; i++){
        sprintf(temp, "%d", numbers[i]);
        strcat(answer, temp);       
    }

    return answer;
}
