<h3 id="í’€ì´">í’€ì´</h3>

<div class="language-plaintext highlighter-rouge"><div class="highlight"><pre class="highlight"><code>#include &lt;string&gt;
#include &lt;vector&gt;

using namespace std;

int getSum(int x){

    int sum = 0;

    while(x &gt; 9){

        sum += (x%10);           
        x /= 10;
    }

    sum += x;

    return sum;
}

bool solution(int x) {
    bool answer = true;
    int sum = 0;

    if(x &lt; 10) answer = true;
    else{

        sum = getSum(x);

        if(x%sum == 0) answer = true;
        else answer = false;
    }

    return answer;
}
